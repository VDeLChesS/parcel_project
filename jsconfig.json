{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2022",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "compileOnSave": true,
    "type": "module"
}